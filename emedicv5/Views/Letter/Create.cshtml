@model eMedicNETEMv1.Models.Letter
@{
    ViewData["Title"] = "Letter Template";
    ViewData["Title"] = "Create";
}
@section script
{
    <!-- Javascript  -->
    <script src="~/content/assets/plugins/tinymce/tinymce.min.js"></script>
    <script src="~/content/assets/pages/form-editor.init.js"></script>
    <!-- App js -->
    <script src="~/content/assets/js/app.js"></script>
}
<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">@ViewBag.AppTitle</a></li>
                        <li class="breadcrumb-item"><a href="#">@ViewBag.Title</a></li>
                        <li class="breadcrumb-item active">@ViewBag.SubTitle</li>
                    </ol>
                </div>
                <h4 class="page-title">@ViewBag.Title</h4>
            </div>
            <!--end page-title-box-->
        </div>
        <!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">TinyMCE Editor</h4>
                    <p class="text-muted mb-0">
                        Bootstrap-wysihtml5 is a javascript
                        plugin that makes it easy to create simple, beautiful wysiwyg editors
                        with the help of wysihtml5 and Twitter Bootstrap.
                    </p>
                </div><!--end card-header-->
                <div class="card-body">
                    <form method="post">
                        <textarea id="basic-conf">Hello, World!</textarea>
                    </form>
                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!-- end col -->
    </div> <!-- end row -->

</div><!-- container -->
