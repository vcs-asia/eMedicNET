<%@ Page Language="C#" MasterPageFile="~/eMedicNET.master" AutoEventWireup="true" Inherits="Appointments_Groups" Codebehind="Groups.aspx.cs" %>
<asp:Content ContentPlaceHolderID="head" runat="server"></asp:Content>
<asp:Content ContentPlaceHolderID="contentForm" runat="server">
    <h4>Groups</h4>
    <div class="control-group">
        <asp:TextBox runat="server" ID="txtGroup" placeholder="Group Name" required="true"></asp:TextBox>
    </div>
    <div class="control-group">
        <asp:Button runat="server" CssClass="btn" Text="Save" OnCommand="saveInfo" />
    </div>
    <asp:GridView runat="server" ID="Lst" DataKeyNames="group_id" AutoGenerateColumns="false" GridLines="Horizontal" CellPadding="1" CellSpacing="1" AllowPaging="true" Width="100%" PageSize="15"
        OnPageIndexChanging="PageIndexChanging" OnSorting="Sorting" AllowSorting="true">
        <Columns>
            <asp:BoundField DataField="group_name" SortExpression="group_name" ItemStyle-Width="80%" HeaderText="Group Name" />
            <asp:BoundField DataField="no_contacts" SortExpression="no_contacts" ItemStyle-Width="20%" HeaderText="No. of Contacts" />
        </Columns>
    </asp:GridView>
</asp:Content>
<asp:Content ContentPlaceHolderID="Script" runat="server"></asp:Content>
